var assert = require('chai').assert;
var sinon = require('sinon');

var <%= componentName %> = require('./<%= componentClassName %>');

describe('<<%= componentName %>/>', function() {
  // local property initialization: use spies to test callbacks
  var props;
  beforeEach(function() {
    props = {
      literal: 'value',
      onClick: sinon.spy()
    }
  })

  it('should call onClick property', function() {
    var component = helpers.react.render(<%= componentName %>(props))
    helpers.react.simulate.click(component.getDOMNode());
    assert.ok(props.onClick.calledOnce, 'click handler called');
  });

  it('should have the correct className', function() {
    var component = helpers.react.render(<%= componentName %>(props));
    assert.ok($(component.getDOMNode()).is('.<%= componentClassName %>'));
  });
});
